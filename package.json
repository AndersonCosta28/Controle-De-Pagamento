{
   "name": "gerenciamento-de-pagamento",
   "version": "1.0.0",
   "description": "API para cadastrar funcionarios, setores, cargos e contrato para calcular salários e manejar o cargo de funcionário com mais facilidade",
   "main": "build/server.js",
   "dependencies": {
      "express": "^4.17.3",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.10",
      "swagger-ui-express": "^4.3.0"
   },
   "scripts": {
      "build": "rimraf ./build && tsc",
      "start": "tsc && ts-node build/server.js",
      "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules src/server.ts",
      "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
   },
   "devDependencies": {
      "@types/express": "^4.17.13",
      "@types/node": "^17.0.25",
      "@types/swagger-ui-express": "^4.1.3",
      "ts-node": "^10.7.0",
      "ts-node-dev": "^1.1.8",
      "typeorm": "^0.2.45",
      "typescript": "^4.7.0-dev.20220425"
   }
}
